<div class="boardgames-group">
    <% items.forEach(function(item){ %>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.info.description %></p>
                <div class="boardgame-options">
                    <p><i class="fa-solid fa-box-archive"></i> <%= (item.info.genre).toString() %></p>
                    <p><i class="fa-solid fa-users"></i> <%= item.info.noOfPlayersMin %> to <%= item.info.noOfPlayersMax %></p>
                    <p><i class="fa-solid fa-hourglass"></i> <%= item.info.durationMin %> to <%= item.info.durationMax %></p>
                    <p><i class="fa-solid fa-child"></i> <%= item.info.ageLimit %> +</p>
                    <p><i class="fa-solid fa-globe"></i> <%= item.info.language %></p>
                </div>
                <div class="user-buttons">
                    <p><%= item.amount %> Available</p>
                    <a class="infobtn" onclick='displayInfoModal("<%= item.name %>", "<%= item.info.description %>")'><i class="fa-solid fa-circle-info"></i></a>
                    <a><i class="fa-solid fa-cart-plus"></i></a>
                </div>
            </div>
        </div>
    <% }) %>
</div>