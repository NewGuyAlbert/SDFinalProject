<%- include('../components/header.ejs') %>

<script src="./logintwofa.js"></script>

<link rel="stylesheet" type="text/css" href="../css/admin.css">

<nav class="navbar fixed-top navbar-light">
    <a class="navbar-brand" href="/admin">Co-Hop Admin <i class="fa-solid fa-screwdriver-wrench"></i></a>
    <form id="nav-menu"class="form-inline buttons">
        <a class="adminNavOption admin-login" href="/admin/login">Log in</a>
    </form>
</nav>

<div id="login-card" class="card">
    <h2 id="login-card-header" class="card-header">Log In</h2>
    <div id="login-card-body" class="card-body">
        <p style="color:black;">You only have 1 minute to input the verification code</p>
        <form id="login-form" class="p-3 mt-3" action="/admin/logintwofa" method="POST" name="twofaform" onsubmit="return validateTwofa();">
            <p>
                <label for="code" style="color:black;">Enter verification code: </label>
                <input type="password" id="code" name="code" placeholder="Type the verification code.">
            </p>
            <button class="login-btn mt-3" type="submit">Log In</button>
        </form>
    </div>
</div>

